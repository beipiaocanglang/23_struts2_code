<?xml version="1.0" encoding="UTF-8"?>
<!-- 
1、在src下创建名称为struts的xml配置文件
2、导入约束
	约束位置：struts2-core-xxx.jar中的struts-2.3.dtd中
 -->
 <!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="book" extends="myDefault">
		<action name="addBook" class="study.web.action.BookAction" method="addBook">
			<result name="success" type="dispatcher">
				<param name="location">success.jsp</param><!-- 下面action的动作名称 -->
			</result>
		</action>
	</package> 
</struts>
